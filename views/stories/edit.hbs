<h3>Edit your Post</h3>
<div class="row">
    <form action="/stories/{{story._id}}"  method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="fooditem" name="fooditem" value={{story.fooditem}}>
                <label for="fooditem">Food Item</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Food description:</h5>
                <textarea id="fooddesc" name="fooddesc">{{story.fooddesc}}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="location" name="location" value={{story.location}}>
                <label for="location">Location</label>
            </div>
        </div>

        <div class="row" style="padding-bottom: 30 ; position:relative">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>